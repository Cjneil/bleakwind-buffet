<!--
 * Author: Connor Neil
 * File name: SailorSodaMenu.xaml
 * Purpose: XAML representation of Sailor Soda customization menu
 -->
<UserControl x:Class="PointOfSale.SailorSodaMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="TextAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="30"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="35"/>
                <Setter Property="Background" Value="#009E73"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style x:Key="Scale" TargetType="{x:Type Control}">
                <Setter Property="Margin" Value="30"/>
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="3" ScaleY="3"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Border Grid.Row="0" BorderThickness="2" BorderBrush="Black">
            <TextBlock FontWeight="Bold" TextAlignment="Center" FontSize="30" Foreground="White" Background="#009E73" >
                    Customize a Sailor Soda
            </TextBlock>
        </Border>
        
        <!--Label plus buttons for use in changing the size of the order-->
        <TextBlock Grid.Row="1">
                Size:
        </TextBlock>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".6*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <RadioButton Name="smallButton" GroupName="Size" Content="Small" IsChecked="{Binding Path = Size}" Grid.Column="0" Style="{StaticResource Scale}"/>
            <RadioButton Name="mediumButton" GroupName="Size" Content ="Medium" IsChecked="{Binding Path=Size}" Grid.Column="1" Style="{StaticResource Scale}"/>
            <RadioButton  Name="largeButton" GroupName="Size" Content ="Large" IsChecked="{Binding Path=Size}" Grid.Column="2" Style="{StaticResource Scale}"/>
        </Grid>
        
        <TextBlock Grid.Row="3">
                Flavor:
        </TextBlock>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".6*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <RadioButton Name="blackberryButton" GroupName="Flavor" Content="Blackberry" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="0" Style="{StaticResource Scale}"/>
            <RadioButton Name="cherryButton" GroupName="Flavor" Content="Cherry" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="1" Style="{StaticResource Scale}"/>
            <RadioButton Name="grapefruitButton" GroupName="Flavor" Content="Grapefruit" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="2" Style="{StaticResource Scale}"/>
            <RadioButton Name="lemonButton" GroupName="Flavor" Content="Lemon" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="0" Grid.Row="1" Style="{StaticResource Scale}"/>
            <RadioButton Name="peachButton" GroupName="Flavor" Content="Peach" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="1" Grid.Row="1" Style="{StaticResource Scale}"/>
            <RadioButton Name="watermelonButton" GroupName="Flavor" Content="Watermelon" IsChecked="{Binding Path = Flavor, Mode=TwoWay}" Grid.Column="2" Grid.Row="1" Style="{StaticResource Scale}"/>
        </Grid>

        <!--Label plus toggleable buttons for use in adding/removing special instructions
         for the order-->
        <TextBlock Grid.Row="5">
                Special Instructions (Yes/No states current choice):
        </TextBlock>

        <WrapPanel Grid.Row="6">
            <CheckBox Name="iceToggle" Content="Ice" IsChecked="{Binding Path=Ice, Mode=TwoWay}" Style="{StaticResource Scale}"/>
        </WrapPanel>
        <Button Grid.Row="7" Click="CompleteClick" Name="completeButton">
            Complete Item
        </Button>
        
        <Button Grid.Row="8" Click="CancelClick" Name="cancelButton" Background="#D55E00">
            Cancel Item
        </Button>
            
    </Grid>
</UserControl>
