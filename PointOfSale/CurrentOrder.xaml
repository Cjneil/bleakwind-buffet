<!--
 * Author: Connor Neil
 * File name: CurrentOrder.xaml
 * Purpose: XAML representation of the list of current items on the order
 -->
<UserControl x:Class="PointOfSale.CurrentOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2">
            <TextBlock Text="Current Order" FontSize="50" TextAlignment="Center" FontWeight="Bold" Background="#009E73" Foreground="White"/>
        </Border>

        <ScrollViewer Grid.Row="1">
            <ListView Name="orderList"/>
        </ScrollViewer>
    </Grid>
</UserControl>
